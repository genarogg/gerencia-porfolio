---
interface Props {
    title: string
    company: string
    description: string
    date: string
    link?: string
}
const {title, description, date, link, company } = Astro.props

---
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
</div>
<time class="mb-1 text-sm font-normal leading-none text-scooter-100/90">{date}</time>
<h3 class="text-lg font-semibold text-mango-300 mt-2 flex items-center gap-2">
    {title} <span class="text-white font-normal">-</span> <span class="text-xs font-normal text-scooter-300/90">{company}</span>
</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">{description}</p>
{link && (
    <a href={link} class="rounded-full border border-white/10 inline-flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 text-xs md:text-base md:px-4 bg-white/5 hover:bg-white/10 hover:scale-105 transition-transform"
    target="_blank" rel="noopener noreferrer">
        Saber m√°s 
        <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg>
    </a>
)}
        
